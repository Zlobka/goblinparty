import Layout from "../../../layouts/Layout.astro";
import Card from "../../../layouts/Card.astro";
import Scroll from "../../../layouts/Scroll.astro";
import Scrollcard from "../../../layouts/Scrollcard.astro";
---

<Layout title="Goblin Hero">
	<Card
		img="/images/scryfall/creatures/goblin-hero-s99.jpg"
		enname="Goblin Hero"
		runame="Гоблин-герой"
		prints="Starter (1999)"
		illustrated="Pete Venters"
		link="https://scryfall.com/search?q=a%3A%E2%80%9CPete+Venters%E2%80%9D&order=released&dir=asc&unique=art"
		flavor="«Когда ты гоблин, тебе не нужно выходить вперед, чтобы стать героем — все остальные просто должны отступить!»"
		thanks=""
		other="В июле 1999 года вышел набор карт начального уровня, который известен как Starter 1999, где была добавлена полоска, отделяющая художественный текст. \n В данном издании Гоблин-герой был напечатан с символом редкой карты, хотя она оставалась обычной, а в художественном тексте убрано упоминание ветерана гоблинов Биггама Флодрота, которому принадлежит данная цитата."
	/>
	<Scroll>
		<Scrollcard
			img="/images/scryfall/creatures/goblin-hero-drk.jpg"
			link="/Collection/Creatures/goblin-hero-drk"
		/>
		<Scrollcard
			img="/images/scryfall/creatures/goblin-hero-5ed.jpg"
			link="/Collection/Creatures/goblin-hero-5ed"
		/>
		<Scrollcard
			img="/images/scryfall/creatures/goblin-hero-s99.jpg"
			link="/Collection/Creatures/goblin-hero-s99"
		/>
	</Scroll>
</Layout>

