---
// import "../styles/global.css";
// import { Image } from 'astro:assets';
// import Scroll from "../../../layouts/Scroll.astro";

interface Props {
	img: string;
	link: string;
}

const { img, link } = Astro.props;
---


<div class="scroll-content">
	<a href={link}><img src={img} alt="" width="100" height="140"/></a>
</div>

<style>
	.scroll-content {
		display: inline-block;
	}
  
	.scroll-content a {
		display: inline-block;
	  	margin-right: 10px; /* Расстояние между изображениями */
	  	overflow: hidden;
    	position: relative;
    	transition: transform 0.3s ease; /* Добавляем анимацию */
	}

	.scroll-content a:hover {
    	transform: scale(1.25); /* Увеличиваем размер при наведении мыши */
  	}
</style>